<Window x:Class="RaboChat.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RaboChat.WpfClient"
        mc:Ignorable="d"
        Height="350" Width="525" Title="{Binding Title}">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition  Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <RichTextBox Grid.Row="0" Grid.ColumnSpan="2"  
                         IsReadOnly="True" IsDocumentEnabled="True" 
                         local:RichTextBoxHelper.FlowDocument="{Binding Lines}"
                         ScrollViewer.VerticalScrollBarVisibility="Visible">
                <RichTextBox.Resources>
                    <!--<Style TargetType="{x:Type FlowDocument}">
                        <Setter Property="PagePadding" Value="0,5,5,0"/>
                    </Style>-->    
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="Block.Margin" Value="0" />
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="BorderBrush" Value="DarkGray"/>
                    </Style>
                </RichTextBox.Resources>
                <RichTextBox.Document>
                    <!--<FlowDocument/>-->
                    <FlowDocument>
                        <Paragraph><Run>erdfgdfg</Run></Paragraph>
                        <Paragraph><Run>erdfgdfg</Run></Paragraph>
                        <Paragraph><Run>erdfgdfg</Run></Paragraph>
                    </FlowDocument>
                </RichTextBox.Document>
            </RichTextBox>

            <TextBox Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" 
                     Grid.Row="1" AcceptsReturn="True" AcceptsTab="True">
                <TextBox.InputBindings>
                    <KeyBinding Command="{Binding SendCommand}" Key="Return" />
                </TextBox.InputBindings>
            </TextBox>
            
            <Button Grid.Row="1" Grid.Column="1" Command="{Binding SendCommand}">Send</Button>
        </Grid>
        
        <Grid Visibility="{Binding IsLoggedIn, Converter={StaticResource visibilityConverter}, ConverterParameter=True}"
              Background="White">
            <StackPanel Width="200" VerticalAlignment="Center" Name="LoginBox">
                <TextBlock>Type your name:</TextBlock>
                <TextBox Text="{Binding UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.InputBindings>
                        <KeyBinding Command="{Binding LoginCommand}" CommandParameter="{Binding ElementName=LoginBox}" Key="Return" />
                    </TextBox.InputBindings>
                </TextBox>
                <Button Command="{Binding LoginCommand}" CommandParameter="{Binding ElementName=LoginBox}">Login</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
